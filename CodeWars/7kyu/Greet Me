// Write a method that takes one argument as name and then greets that name, 
// capitalized and ends with an exclamation point.

// Example:

// "riley" --> "Hello Riley!"
// "JACK"  --> "Hello Jack!"




var greet = function(name) {
  
  let lowName = name.toLowerCase();
  
  let firstLetterOfName = lowName[0].toUpperCase();
  let otherLettersOfName = lowName.slice(1, lowName.length);
  
  let rightName = firstLetterOfName + otherLettersOfName;
  
  let greetings = `Hello ${rightName}!` ;
  
  return greetings;
}

